    "authors": [
      {
        "name": "Mathis Brossier",
        "email": "mathis.brossier@gmail.com"
      }
    ],
    "links": {
      "repository": "https://wgsl-tooling-wg/tree-sitter-wesl"
    }
  },
  "bindings": {
